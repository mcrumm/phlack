#!/usr/bin/env php
<?php

define('PHLACKBOT_NAME',    'phlackbot');
define('PHLACKBOT_VERSION', '0.7.0-PREVIEW');

if (is_dir($vendor = getcwd() . '/vendor')) {
    require $vendor . '/autoload.php';
}

if (is_dir($vendor = __DIR__ . '/../vendor')) {
    require($vendor . '/autoload.php');
} elseif (is_dir($vendor = __DIR__ . '/../../..')) {
    require($vendor . '/autoload.php');
} else {
    die(
        'You must set up the project dependencies, run the following commands:' . PHP_EOL .
        'curl -s http://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
}

$mainframe  = (new \Crummy\Phlack\WebHook\Mainframe())
    ->attach(new \Crummy\Phlack\Bot\ExpressionBot('/math')) # Attach the ExpressionBot at /math (e.g /math 2 + 2)
    ->attach(new \Crummy\Phlack\Bot\RepeaterBot()) # Attach the RepeaterBot to respond to all other commands.
;

$adapter  = new \Crummy\Phlack\Bridge\Symfony\Console\ConsoleAdapter($mainframe);
$app      = new \Crummy\Phlack\Bridge\Symfony\Console\ShellBot($adapter, PHLACKBOT_NAME, PHLACKBOT_VERSION);

$app->run();
